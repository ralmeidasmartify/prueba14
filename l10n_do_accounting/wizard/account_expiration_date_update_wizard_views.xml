<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="account_expiration_date_update_wizard_form" model="ir.ui.view">
        <field name="name">account.expiration.date.update.wizard.form</field>
        <field name="model">account.expiration.date.update_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="document_type_id" invisible="1"/>
                        <field name="l10n_do_ncf_expiration_date"/>
                    </group>
                </group>
                <footer>
                    <button name="update_expiration_date" string="Update" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>    
    
</odoo>
